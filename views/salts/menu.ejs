<% layout('layouts/template') %>

<div class="d-flex flex-wrap mt-5">
    <% for(let menu of menus) { %>
    <div class="card container" id="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1568901346375-23c9450c58cd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8YnVyZ2Vyc3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="...">
        <div class="card-body">
            <h3><%= menu.category%></h3>
            <p><%= menu.food%></p> 
            <p><%= menu.details%></p>
            <p><%= menu.price%></p>  
       </div>
   </div>
   <% } %>
</div>
